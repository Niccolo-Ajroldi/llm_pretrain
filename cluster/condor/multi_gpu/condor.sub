
# Define variables
# NOTE: executable should be a full path
LOGS_DIR=/fast/najroldi/logs/llm
executable=/home/najroldi/llm_pretrain/cluster/condor/multi_gpu/run.sh

# Job specific vars
config=config/pythia_7B.yaml
n_jobs=1

# Args
arguments = $(config) $(Process)

# Logs
error = $(LOGS_DIR)/err/job.$(Cluster).$(Process).err
